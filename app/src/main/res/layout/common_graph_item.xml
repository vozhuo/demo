<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/common_item_graph_main_background">

    <include
        layout="@layout/common_sub_header_left"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/activity_water_weather_item_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:contentPaddingTop="20dp"
        app:contentPaddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/common_graph_item_week_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="@string/activity_dam_monitor_graph_week_horizontal_offset_text"
                android:textSize="12sp"
                android:textColor="#5F5F5F"/>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/common_graph_item_week_linechart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/common_graph_item_month_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                tools:text="@string/activity_dam_monitor_graph_week_horizontal_offset_text"
                android:textSize="12sp"
                android:textColor="#5F5F5F"/>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/common_graph_item_month_linechart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/common_graph_item_year_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                tools:text="@string/activity_dam_monitor_graph_week_horizontal_offset_text"
                android:textSize="12sp"
                android:textColor="#5F5F5F"/>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/common_graph_item_year_linechart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>