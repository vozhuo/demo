<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/drawable_navigation_text_background_selector">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="150dp"
        android:layout_height="49dp">

        <ImageView
            android:id="@+id/bottom_navigation_popup_window_item_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            tools:src="@drawable/ic_device_48px"/>

        <TextView
            android:id="@+id/bottom_navigation_popup_window_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textColor="@color/bottom_navigation_submenu_text_color"
            tools:text="选项"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DDDDDD"/>
</LinearLayout>
