<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.myapplication.widget.AdjustableVideoView
                android:id="@+id/video_player_activity_videoview"
                android:layout_width="match_parent"
                android:layout_height="220dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/video_player_activity_controller_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/video_player_activity_arrow_back_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back_whith_48px"
                android:background="@drawable/ripple"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="5dp"/>
            <ImageButton
                android:id="@+id/video_player_activity_download_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_download_white_48px"
                android:background="@drawable/ripple"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:padding="5dp"
                android:layout_marginEnd="5dp"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/video_player_activity_controller_bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/video_player_controller_widget_background">
            <ImageButton
                android:id="@+id/video_player_activity_start_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_start_white_48px"
                android:scaleType="fitCenter"
                android:layout_marginStart="5dp"/>

            <SeekBar
                android:id="@+id/video_player_activity_seekbar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxHeight="4dp"
                android:progressDrawable="@drawable/video_player_seekbar_background"
                android:thumbTint="@color/video_player_thumb_tint"/>
            <TextView
                android:id="@+id/video_player_activity_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="/"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/video_player_activity_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="00:00"
                android:textColor="#FFFFFF"/>
            <ImageButton
                android:id="@+id/video_player_activity_fullscreen_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="5dp"
                android:padding="4dp"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_fullscreen_white"
                android:scaleType="fitXY"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/video_player_activity_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="无人机巡查监控 01"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
</LinearLayout>