<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/activity_water_weather_item_background"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/activity_water_weather_main_current_weather_iv"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/icon_weather_sunshine_128px"/>
                <TextView
                    android:id="@+id/activity_water_weather_main_current_tempeature_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="33°"
                    android:textSize="80sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/activity_water_weather_main_current_temperature_range_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36°/26°"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="体感温度"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:id="@+id/activity_water_weather_main_current_sensible_temperature_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32°"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/activity_water_weather_main_one_hour_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:00"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"/>
                        <ImageView
                            android:id="@+id/activity_water_weather_main_one_hour_weather_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/icon_weather_sunshine_128px"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_one_hour_temperature_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="2dp"
                            android:text="33°"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/activity_water_weather_main_two_hour_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:00"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"/>
                        <ImageView
                            android:id="@+id/activity_water_weather_main_two_hour_weather_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/icon_weather_sunshine_128px"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_two_hour_temperature_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="2dp"
                            android:text="33°"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/activity_water_weather_main_three_hour_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:00"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"/>
                        <ImageView
                            android:id="@+id/activity_water_weather_main_three_hour_weather_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/icon_weather_sunshine_128px"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_three_hour_temperature_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="2dp"
                            android:text="33°"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/activity_water_weather_main_four_hour_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:00"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"/>
                        <ImageView
                            android:id="@+id/activity_water_weather_main_four_hour_weather_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/icon_weather_sunshine_128px"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_four_hour_temperature_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="2dp"
                            android:text="33°"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/activity_water_weather_main_today_weather_iv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_weather_sunshine_128px"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_today_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:gravity="center"
                            android:text="今天·"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_today_weather_description_tv"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="多云转晴"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_today_temperature_range_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="27°/15°"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/activity_water_weather_main_one_day_weather_iv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_weather_sunshine_128px"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_one_day_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:gravity="center"
                            android:text="今天·"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_one_day_weather_description_tv"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="多云转晴"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_one_day_temperature_range_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="27°/15°"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/activity_water_weather_main_two_day_weather_iv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_weather_sunshine_128px"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_two_day_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:gravity="center"
                            android:text="今天·"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_two_day_weather_description_tv"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="多云转晴"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_two_day_temperature_range_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="27°/15°"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/activity_water_weather_main_three_day_weather_iv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_weather_sunshine_128px"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_three_day_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:gravity="center"
                            android:text="今天·"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_three_day_weather_description_tv"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="多云转晴"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/activity_water_weather_main_three_day_temperature_range_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="27°/15°"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
</androidx.cardview.widget.CardView>