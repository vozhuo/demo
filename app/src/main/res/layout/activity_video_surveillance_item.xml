<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/activity_video_surveillance_title_color">
        <TextView
            android:id="@+id/activity_video_surveillance_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textColor="@color/activity_video_surveillance_text_color"
            tools:text="AE01"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/activity_video_surveillance_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:textColor="@color/activity_video_surveillance_text_color"
            tools:text="输水隧洞A11#"
            android:textSize="18sp"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/activity_video_surveillance_cardview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/activity_video_surveillance_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>